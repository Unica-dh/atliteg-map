{
  "meta": {
    "name": "AtLiTeG Design System",
    "style": "academic-minimal",
    "tone": "institutional, calm, authoritative",
    "density": "comfortable"
  },

  "colors": {
    "primary": "#0B5FA5",
    "primary-hover": "#094E88",
    "primary-light": "#E6F0FA",

    "accent": "#3B82F6",

    "background": "#FFFFFF",
    "background-muted": "#F6F8FB",

    "text-primary": "#1F2937",
    "text-secondary": "#4B5563",
    "text-muted": "#6B7280",
    "text-inverse": "#FFFFFF",

    "border": "#E5E7EB",
    "divider": "#D1D5DB",

    "link": "#0B5FA5",
    "link-hover": "#094E88"
  },

  "typography": {
    "font-family-base": "'Inter', 'Helvetica Neue', Helvetica, Arial, sans-serif",
    "font-family-heading": "'Inter', 'Helvetica Neue', Helvetica, Arial, sans-serif",

    "font-sizes": {
      "xs": "12px",
      "sm": "14px",
      "base": "16px",
      "lg": "18px",
      "xl": "22px",
      "2xl": "28px",
      "3xl": "36px"
    },

    "line-heights": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.7
    },

    "font-weights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },

    "headings": {
      "h1": {
        "font-size": "36px",
        "font-weight": 600,
        "line-height": 1.3
      },
      "h2": {
        "font-size": "28px",
        "font-weight": 600,
        "line-height": 1.35
      },
      "h3": {
        "font-size": "22px",
        "font-weight": 600
      }
    },

    "body": {
      "font-size": "16px",
      "line-height": 1.7,
      "font-weight": 400
    }
  },

  "layout": {
    "container-width": "1200px",
    "content-width": "1040px",
    "gutter": "24px",

    "header-height": "96px",
    "footer-padding": "48px",

    "section-spacing": {
      "sm": "32px",
      "md": "64px",
      "lg": "96px"
    }
  },

  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px",
    "2xl": "48px",
    "3xl": "64px"
  },

  "navigation": {
    "background": "#0B5FA5",
    "text-color": "#FFFFFF",
    "text-hover": "#E6F0FA",
    "font-size": "14px",
    "letter-spacing": "0.04em",
    "item-spacing": "24px",
    "height": "56px"
  },

  "buttons": {
    "primary": {
      "background": "#3B82F6",
      "background-hover": "#2563EB",
      "text-color": "#FFFFFF",
      "border-radius": "6px",
      "padding": "12px 24px",
      "font-weight": 500
    },

    "secondary": {
      "background": "#FFFFFF",
      "text-color": "#0B5FA5",
      "border": "1px solid #0B5FA5",
      "border-radius": "6px",
      "padding": "12px 24px"
    }
  },

  "cards": {
    "background": "#FFFFFF",
    "border": "1px solid #E5E7EB",
    "border-radius": "8px",
    "padding": "24px",
    "shadow": "0 2px 6px rgba(0,0,0,0.05)",
    "hover-shadow": "0 4px 12px rgba(0,0,0,0.08)"
  },

  "timeline": {
    "dot-color": "#3B82F6",
    "line-color": "#D1D5DB",
    "dot-size": "10px",
    "line-width": "2px",
    "label-font-size": "14px"
  },

  "logos": {
    "max-height": "64px",
    "grayscale": true,
    "opacity": 0.9
  },

  "forms": {
    "input-height": "44px",
    "border-radius": "6px",
    "border-color": "#D1D5DB",
    "focus-border-color": "#3B82F6",
    "font-size": "16px"
  },

  "animations": {
    "transition-fast": "150ms ease-out",
    "transition-normal": "250ms ease",
    "hover-scale": 1.02
  },

  "accessibility": {
    "contrast-ratio": "AA",
    "focus-outline": "2px solid #3B82F6",
    "focus-offset": "2px"
  }
}
